<configuration>
  <appender class="ch.qos.logback.core.ConsoleAppender" name="STDOUT">
    <encoder>
      <pattern>
        %d{"uuuu-MM-dd'T'HH-mm-ssX", UTC} %boldCyan(%-25.-25t) %boldGreen(%-20.-20c{0}) %highlight(%-6p) %m%n
      </pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>